#!/bin/sh                                                                                            
set +x;                                                                                              
                                                                                                     
                                                                                                     
sw="swconfig dev eth0"                                                                               
leds="/sys/class/leds/F@ST2704N:green:lan"                                                           
ports_array="0 1 2 3"                                                                                
                                                                                                     
while [ true ]; do                                                                                   
for x in $ports_array; do                                                                            
        link=$($sw port $x get link | cut -d " " -f 2 | cut -d ":" -f 2);                            
        let real=$x+1;                                                                               
#       echo "LAN$x: $link";                                                                         
        [ "$link" == "up" ] && echo 1 > "$leds$real"/brightness || echo 0 > "$leds$real"/brightness; 
done                                                                                                 
#sleep 1;                                                                                          
done;
